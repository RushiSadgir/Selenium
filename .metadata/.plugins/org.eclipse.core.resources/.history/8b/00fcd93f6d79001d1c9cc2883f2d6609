package logical2;

public class SpaceCount {

	public static void main(String[] args)
	{
		String a="hi he llo how a re";
		char count=0;
		for(int i=0;i<=a.length()-1;i++)
		{
			char s = a.charAt(i);
			char space=' ';
			if(s==space)
			{
				count++;
			}
		}
		System.out.println(count);
		

	}

}
